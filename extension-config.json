{
  "version": "1.4.0-beta.1",
  "id": "@shopgate-project/pdp-variant-accordion",
  "components": [
    {
      "id": "VariantSelect",
      "path": "frontend/portals/VariantSelect/index.jsx",
      "target": "product.variant-select",
      "type": "portals"
    }
  ],
  "configuration": {
    "horizontalInsets": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Horizontal insets for the characteristics in pixels (e.g. 16)"
      }
    },
    "bottomInset": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Trailing inset for the characteristics block in pixels (e.g. 16)"
      }
    },
    "animate": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Whether the characteristics accordions are animated"
      }
    },
    "characteristicBorderColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Border color of a characteristic section"
      }
    },
    "characteristicValueBorderColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Border color of a characteristic value"
      }
    },
    "characteristicValueBorderColorSelected": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Border color of a selected characteristic value"
      }
    },
    "showBottomBorder": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "type": "checkbox",
        "label": "Whether the last characteristic has a border at the bottom"
      }
    },
    "useImageAsSwatch": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Whether the swatch should be shown as an image"
      }
    },
    "showSwatchAsCircle": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Whether the swatch is shown as a rectangle or a circle"
      }
    },
    "showLabelBelowSwatch": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Whether the label of the swatch is shown below the swatch itself"
      }
    },
    "imageOverlayLabelColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "#fff",
      "params": {
        "type": "text",
        "label": "Text color of the optional image overlay label"
      }
    },
    "propertyWithColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Name of the child product property which contains color hexcode",
        "type": "text",
        "required": true
      }
    },
    "colorCharacteristic": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "label": "A list of characteristic names which are used as color swatch (e.g. ['Color', 'Shoe Color', 'Farbe']",
        "type": "json",
        "required": true
      }
    },
    "imageSwatchSize": {
      "type": "admin",
      "destination": "frontend",
      "default": 50,
      "params": {
        "type": "number",
        "label": "The size of the image in pixel.",
        "required": true
      }
    },
    "imageSwatchBackgroundSize": {
      "type": "admin",
      "destination": "frontend",
      "default": "cover",
      "params": {
        "label": "Value must be a property of CSS backgroundsize",
        "type": "text",
        "required": true
      }
    },
    "sortColorImageCharacteristic": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Sort the Color Image Characteristic. String of the values",
        "type": "text",
        "required": true
      }
    },
    "showVariantPrices": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "label": "Shows the prices in the variant selection (if product has only one characteristic!)",
        "type": "json",
        "required": true
      }
    },
    "variantSelectionAlwaysOpen": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "label": "Defines whether the variant selection is always open or not (if product has only one characteristic!)",
        "type": "json",
        "required": true
      }
    },
    "characteristicValueImageMapping": {
      "type": "admin",
      "destination": "frontend",
      "default": {},
      "params": {
        "label": "Mapping of product variants to their corresponding image URLs and labels.",
        "type": "json",
        "required": true
      }
    }
  }
}
