{
  "version": "1.2.0",
  "id": "@shopgate-project/pdp-variant-accordion",
  "components": [
    {
      "id": "VariantSelect",
      "path": "frontend/portals/VariantSelect/index.jsx",
      "target": "product.variant-select",
      "type": "portals"
    }
  ],
  "configuration": {
    "horizontalInsets": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Horizontal insets for the characteristics in pixels (e.g. 16)"
      }
    },
    "bottomInset": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Trailing inset for the characteristics block in pixels (e.g. 16)"
      }
    },
    "animate": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Wether the characteristics accordions are animated"
      }
    },
    "characteristicBorderColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Border color of a characteristic section"
      }
    },
    "characteristicValueBorderColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Border color of a characteristic value"
      }
    },
    "characteristicValueBorderColorSelected": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "number",
        "label": "Border color of a selected characteristic value"
      }
    },
    "showBottomBorder": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "type": "checkbox",
        "label": "Wether the last characteristic has a border at the bottom"
      }
    },
    "propertyWithColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Name of the child product property which contains color hexcode",
        "type": "text",
        "required": true
      }
    },
    "colorCharacteristic": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "label": "Characteristic names which are used as color swatch (e.g.['Color', 'Shoe Color', 'Farbe']",
        "type": "json",
        "required": true
      }
    },
    "showVariantPrices": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "label": "Shows the prices in the variant selection (if product has only one characteristic!)",
        "type": "json",
        "required": true
      }
    }
  }
}
